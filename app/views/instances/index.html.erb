<h1>Listing instances</h1>

<table>
  <tr>
    <th>User Comment</th>
    <th>Hostname</th>
    <th>IP Address</th>
    <th>Base Image</th>
    <th>CPUs</th>
    <th>Memory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @instances.each do |instance| %>
  <tr>
    <td><%= instance.usercomment %></td>
    <td><%= instance.hostname %></td>
    <td><%= instance.ipaddr %></td>
    <td><%= instance.baseimage %></td>
    <td><%= instance.cpus %></td>
    <td><%= instance.memory %></td>
    <td><%= link_to 'Show', instance %></td>
    <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
    <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

