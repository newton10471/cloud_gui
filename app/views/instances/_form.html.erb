<%= form_for(@instance) do |f| %>
  <% if @instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instance.errors.count, "error") %> prohibited this instance from being saved:</h2>

      <ul>
      <% @instance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :usercomment %><br />
    <%= f.text_field :usercomment %>
  </div>
  <div class="field">
    <%= f.label :baseimage %><br />
    <%= f.select :baseimage, CloudGui::Application.config.images %>
  </div>
  <div class="field">
    <%= f.label :cpus %><br />
    <%= f.select :cpus, CloudGui::Application.config.cpu_sizes %>
  </div>
  <div class="field">
    <%= f.label :memory %><br />
    <%= f.select :memory, CloudGui::Application.config.memory_sizes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
